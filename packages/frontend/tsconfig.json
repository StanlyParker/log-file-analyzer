{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "lib": ["DOM.Iterable", "DOM", "esnext"],
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "vite/client", "react", "react-dom"]
  },
  "include": [
    "src/**/*.{ts,tsx}",
    "tests/**/*.{ts,tsx}",
    "vite.config.ts",
    "vitest.config.ts",
    "src"
  ],
  "exclude": ["node_modules", "dist"]
}
